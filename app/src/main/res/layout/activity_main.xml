<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_app">

    <TextView android:text="@string/main_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/size_font_title_main"
        android:textStyle="normal"
        android:id="@+id/tvTitle"
        android:textColor="@color/text_title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:measureWithLargestChild="false">

        <Button
            style="@style/button_main"
            android:id="@+id/btnStreamer"
            android:layout_marginTop="0dp"
            android:text="@string/streamer"
            android:onClick="openApp" />

        <Button
            style="@style/button_main"
            android:id="@+id/btnScores"
            android:text="@string/scores"
            android:onClick="openApp" />

        <Button
            style="@style/button_main"
            android:id="@+id/btnLibrary"
            android:text="@string/library"
            android:onClick="openApp" />

        <Button
            style="@style/button_main"
            android:id="@+id/btnBigger"
            android:text="@string/bigger"
            android:onClick="openApp" />

        <Button
            style="@style/button_main"
            android:id="@+id/btnReader"
            android:text="@string/reader"
            android:onClick="openApp" />

        <Button
            style="@style/button_own"
            android:id="@+id/btnOwn"
            android:text="@string/own"
            android:onClick="openApp" />
    </LinearLayout>

</RelativeLayout>
